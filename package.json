{
  "name": "reviewable-linker",
  "version": "1.0.0",
  "description": "Slack bot to link Reviewable PRs from a GitHub link",
  "repository": {
    "type": "git",
    "url": "hjdarnel/reviewable-linker"
  },
  "scripts": {
    "start:dev": "npm install && nodemon -x 'npm run build && npm start | bunyan -o short -l debug' --watch src/ -L -e ts",
    "start": "node bin/server.js",
    "cleanbin": "rm -rf bin/",
    "build": "npm-run-all build:*",
    "build:clean": "npm run cleanbin",
    "build:ts": "tsc",
    "lint": "tslint --format verbose src/**/*.ts"
  },
  "author": "Henry Darnell",
  "license": "MIT",
  "dependencies": {
    "@slack/client": "4.5.0",
    "bunyan": "1.8.12",
    "capitalize": "1.0.0",
    "dotenv": "6.2.0",
    "github": "13.1.0",
    "lodash": "4.17.11",
    "npm-run-all": "4.1.5"
  },
  "devDependencies": {
    "@types/bunyan": "1.8.4",
    "@types/capitalize": "1.0.1",
    "@types/lodash": "4.14.116",
    "husky": "0.14.3",
    "lint-staged": "7.2.2",
    "nodemon": "1.17.5",
    "prettier": "1.14.2",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "2.7.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
